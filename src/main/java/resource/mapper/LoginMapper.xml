<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="toto.dao.LoginDao">

	
	<select id="getLoginList" resultType="acc" parameterType="acc">
		select * from Account
	</select>
	<select id="ck" resultType="acc" parameterType="acc">
		select * from Account
		WHERE id=#{id}
		and pw=#{pw}
	</select>
	<insert id="totoInsert" parameterType="acc">
		insert into Account(idno, id, pw)
				values((select NVL(max(idno),1)+1 from Account),#{id},#{pw})
	</insert>
	

</mapper>